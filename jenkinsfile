pipeline{
    agent any
    stages{
        stage("build code"){
            steps{
                sh '''
                mvn install 
                cd target 
                ls -lrt
                '''
            }
        }
        stage('SonarQube Analysis') {
            steps {
                //Execute SonarQube scanner
                withSonarQubeEnv('sonar-jenkins') {
                    // Run the scanner using the SonarQube project key and name
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}