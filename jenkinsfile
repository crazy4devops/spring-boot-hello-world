pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                sh """
                ls -lrt
                mvn install
                """
            }
        }
        stage('Sonarqube') {
            environment {
                scannerHome = tool 'sonarqube-scanner'
            }
            steps {
                withSonarQubeEnv('sonar-jenkins') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

    }
}